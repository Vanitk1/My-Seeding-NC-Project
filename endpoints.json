{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "array of comments for the given article_id, ordered by created_at descending",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 1,
          "votes": 16,
          "created_at": "2020-10-31T03:03:00.000Z",
          "author": "King Cow",
          "body": "This is a comment",
          "article_id": 1
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Posts a new comment to the specified article, given a valid username and comment body",
    "example_request_body": {
          "username": "String",
          "body": "String"
        },
        "responses": {
          "201": {
            "comment": {
              "comment_id": 1,
              "votes": 0,
              "created_at": "2022-11-29T03:03:00.000Z",
              "author": "username",
              "body": "test comment",
              "article_id": 1
            }
          }
        }
  },

  "PATCH /api/articles/:article_id": {
    "description": "Updates the votes of an article",
    "example_request_body": {
      "inc_votes": 1
    },
    "responses": {
      "200": {
        "article": {
          "article_id": 1,
          "title": "Article title",
          "topic": "topic",
          "author": "author",
          "body": "Article content",
          "created_at": "timestamp",
          "votes": 101,
          "article_img_url": "http://..."
        }
     }
   }
 },

  "DELETE /apicomments/:comment_id": {
    "description": "Deletes a comments by id",
    "responses": {
      "204": "No content"
    }
  }

}

